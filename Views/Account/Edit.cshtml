@model AwesomeChat.ViewModels.ProfileVM

@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}


@section Body {

    <form method="post" action="@Url.Action("Edit", "Account")" style="width: 100%;">

        @Html.ValidationSummary(true)

        <div class="form-group row">
            <label class="col-md-4 col-sm-2">
                Όνομα:
            </label>
            <div class="col-12">
                @Html.TextBoxFor(x => x.User.FirstName, new { @class = "form-control", @autocomplete = "off" })
                <span class="text-danger field-validation-valid" data-valmsg-for="User.FirstName" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 col-sm-2">
                Επώνυμο:
            </label>
            <div class="col-12">
                @Html.TextBoxFor(x => x.User.LastName, new { @class = "form-control", @autocomplete = "off" })
                <span class="text-danger field-validation-valid" data-valmsg-for="User.LastName" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 col-sm-2">
                Nick Name:
            </label>
            <div class="col-12">
                @Html.TextBoxFor(x => x.User.NickName, new { @class = "form-control", @autocomplete = "off" })
                <span class="text-danger field-validation-valid" data-valmsg-for="User.NickName" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 col-sm-2">
                Email:
            </label>
            <div class="col-12">
                @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control", @autocomplete = "off", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-auto">
                <input type="submit" class="btn btn-outline-success" value="Αποθήκευση" />
            </div>
        </div>

    </form>

}

@section Scripts {

    <script type="text/javascript">

        window.onload = function () {
            document.getElementById('searchUserDiv').style.display = 'none';
        }

    </script>

}