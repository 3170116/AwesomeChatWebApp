@model AwesomeChat.ViewModels.RegisterVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="form-group form-row justify-content-center" style="margin-top: 1em;">
        <h2 class="h2 text-white col-auto">
            <b>
                Awesome Chat
            </b>
        </h2>
    </div>

    <div class="row justify-content-center">

        @if (!String.IsNullOrEmpty(Model.GetErrorMessageForInvalidEmail()))
        {

            <div class="alert alert-warning alert-dismissible fade show col-12" role="alert" style="margin-top: 1em;">
                Το email αυτό δεν υπάρχει!
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        } else if (!String.IsNullOrEmpty(Model.GetErrorMessageForAccountExist()))
        {

            <div class="alert alert-warning alert-dismissible fade show col-12" role="alert" style="margin-top: 1em;">
                Ο λογαριασμός αυτός υπάρχει ήδη!
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        }

        <div class="col-md-9 col-sm-12" style="margin: 1em 1em auto 1em; padding-top: 2em; background-color: white; border-radius: 1em;">

            <form method="post" action="@Url.Action("CreateAccount", "Account")">

                @Html.ValidationSummary(true)

                <div class="form-group row">
                    <label class="col-md-4 col-sm-2">
                        Όνομα:
                    </label>
                    <div class="col-12">
                        @Html.TextBoxFor(x => x.User.FirstName, new { @class = "form-control", @autocomplete = "off" })
                        <span class="text-danger field-validation-valid" data-valmsg-for="User.FirstName" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 col-sm-2">
                        Επώνυμο:
                    </label>
                    <div class="col-12">
                        @Html.TextBoxFor(x => x.User.LastName, new { @class = "form-control", @autocomplete = "off" })
                        <span class="text-danger field-validation-valid" data-valmsg-for="User.LastName" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 col-sm-2">
                        Nick Name:
                    </label>
                    <div class="col-12">
                        @Html.TextBoxFor(x => x.User.NickName, new { @class = "form-control", @autocomplete = "off" })
                        <span class="text-danger field-validation-valid" data-valmsg-for="User.NickName" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 col-sm-2">
                        Email:
                    </label>
                    <div class="col-12">
                        @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control", @autocomplete = "off" })
                        <span class="text-danger field-validation-valid" data-valmsg-for="User.Email" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 col-sm-2">
                        Password:
                    </label>
                    <div class="col-12">
                        @Html.PasswordFor(x => x.User.Password, new { @class = "form-control" })
                        <span class="text-danger field-validation-valid" data-valmsg-for="User.Password" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-12">
                        <input type="submit" class="btn btn-outline-success" value="Εγγραφή" />
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary" style="float: right;">
                            Πίσω
                        </a>
                    </div>
                </div>

            </form>

        </div>
    </div>