@model AwesomeChat.ViewModels.LoginVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center" style="margin-top: 10em;">

    @if (!String.IsNullOrEmpty(Model.GetErrorMessageForInvalidEmail()))
    {

        <div class="alert alert-warning alert-dismissible fade show col-12" role="alert" style="margin-top: 1em;">
            Το email αυτό δεν υπάρχει!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    }
    else if (!String.IsNullOrEmpty(Model.GetErrorMessageForNoAccount()))
    {
        <div class="alert alert-warning alert-dismissible fade show col-12" role="alert" style="margin-top: 1em;">
            Ο λογαριασμός αυτός δεν υπάρχει!
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="col-md-5 col-sm-12">

        <div class="form-group form-row justify-content-center">
            <h2 class="h2 text-white col-auto">
                <b>
                    Awesome Chat
                </b>
            </h2>
        </div>

        <div class="card">
            <div class="card-body">

                <form method="post" action="@Url.Action("Login", "Account")">

                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <label class="col-form-label">
                            Email:
                        </label>
                        @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control col-auto", autocomplete = "off" })
                        <span class="text-danger field-validation-valid" data-valmsg-for="User.Email" data-valmsg-replace="true"></span>
                    </div>

                    <div class="form-group">
                        <label class="col-form-labelr">
                            Password:
                        </label>
                        @Html.PasswordFor(x => x.User.Password, new { @class = "form-control" })
                        <span class="text-danger field-validation-valid" data-valmsg-for="User.Password" data-valmsg-replace="true"></span>
                    </div>

                    <dic class="form-group form-row justify-content-center">
                        <input type="submit" class="btn btn-primary col-auto" value="Είσοδος" />
                    </dic>

                </form>

                <div class="form-group form-row justify-content-center">
                    <label class="col-form-label-sm col-auto" style="padding: 0;">
                        Αν δεν έχεις ήδη λογαριασμό, δημιούργησε έναν&nbsp;
                        <span class="btn-link">
                            <a href="@Url.Action("Register", "Home")">εδώ</a>
                        </span>
                    </label>
                </div>

            </div>

        </div>
    </div>
</div>